.cover-post
    position relative
    display flex
    min-height calc(100vh - 87px)
    text-align center
    flex 1 0 auto
    align-items center
    justify-content center

.cover-background
    z-index -10
    position absolute
    width 100%
    height 100%
    background-position center
    background-size cover

.cover-gradient
    z-index -5
    position absolute
    width 100%
    height 100%
    background linear-gradient(rgba(0,0,0,0.35), rgba(0,0,0,0.85))

.cover-contents
    padding 7rem 0
    max-width 1480px
    width auto
    .post-category
        font-size 0.75rem
        font-weight 500
        display inline-block
        margin-right 0.3125rem
        margin-bottom 0.3125rem
        padding 0.3125rem
        transition $time-norm
        letter-spacing 0.0625rem
        text-transform uppercase
        color #111
        border 2px solid transparent
        background-color #ffea00
        &:hover
            color #fff
            border-color #fff
            background-color transparent
    .post-title
        font-size 3.75rem
        line-height 1.15
        color #fff
        text-shadow 0px 4px 3px rgba(0,0,0,0.4), 0px 8px 13px rgba(0,0,0,0.1), 0px 18px 23px rgba(0,0,0,0.1)
        @media (max-width: $grid-breakpoints.lg)
            font-size 3rem
        @media (max-width: $grid-breakpoints.md)
            font-size 2.5rem
        @media (max-width: $grid-breakpoints.sm)
            font-size 2rem
    hr
        width 9rem
        height 2px
        margin 1.8rem auto 2.5rem
        border 0
        background #ef7645
    .post-subtitle
        font-size 1.25rem
        font-weight 500
        line-height 2rem
        padding 0 0.625rem
        max-width 1180px
        margin 2.3rem auto 0
        color #dcdce4
        @media (max-width: $grid-breakpoints.lg)
            font-size 1.1rem
        @media (max-width: $grid-breakpoints.md)
            font-size 1rem